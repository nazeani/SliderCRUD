@model Slider
<div class="container">
    <div class="row">
        <div class="card" style="width: 18rem;">
            <form asp-action="DeletePost" asp-controller="Slider" method="post">

                <div class="card-body">
                    <h5 class="card-title">@Model.Percent</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.Title</h6>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text">@Model.RedirectUrl</p>
                    <p class="card-text">@Model.ImageUrl</p>
                    <input asp-for="@Model.Id" hidden value="@Model.Id" />
                    <a asp-action="Index" asp-controller="Slider" class="card-link">Go Back</a>

                    <button type="submit" class="btn-outline-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

