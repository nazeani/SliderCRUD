@model Slider
<div class="container">
    <div class="row">
        <form action="UpdatePost" method="post">
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Percent</label>
                <input name="Percent" type="text" class="form-control" id="exampleInputPassword1">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Title</label>
                <input name="Title" type="text" class="form-control" id="exampleInputPassword1">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Description</label>
                <textarea name="Description" row="5" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">RedirectUrl</label>
                <input name="RedirectUrl" type="text" class="form-control" id="exampleInputPassword1">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">ImageUrl</label>
                <input name="ImageUrl" type="file" class="form-control" id="exampleInputPassword1">
            </div>
            <input asp-for="@Model.Id" hidden value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
